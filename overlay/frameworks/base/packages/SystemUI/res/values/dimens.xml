    <dimen name="kg_security_container_min_bottom_margin">725px</dimen>
    <dimen name="physical_fingerprint_sensor_center_screen_location_y">1655px</dimen>
    <dimen name="physical_power_button_center_screen_location_y">980px</dimen>
    <dimen name="physical_volume_down_button_center_screen_location_y">740px</dimen>
    <dimen name="physical_volume_up_button_center_screen_location_y">550px</dimen>

</resources>
